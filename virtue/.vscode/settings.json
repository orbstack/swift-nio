{
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "rust-analyzer.showUnlinkedFileNotification": false,
    "rust-analyzer.linkedProjects": [
        "Cargo.toml",
        "exp/ui-test-harness/Cargo.toml",
        "exp/libkrun-asm-tests/Cargo.toml",
    ],
    "rust-analyzer.check.command": "check",
    // libkrun tests have not been updated in a while and spam the error console
    "rust-analyzer.cargo.unsetTest": [
        "arch", "arch_gen", "cpuid", "devices", "hvf", "kernel", "libkrun", "utils", "vmm",
    ],
    // "rust-analyzer.cargo.target": "x86_64-apple-darwin",
    "rust-analyzer.cargo.extraEnv": {
        "CXXFLAGS": "-mmacosx-version-min=12.3"
    },
    "rust-analyzer.server.extraEnv": {
        "CXXFLAGS": "-mmacosx-version-min=12.3"
    },
    "rust-analyzer.check.extraEnv": {
        "CXXFLAGS": "-mmacosx-version-min=12.3"
    }
}
